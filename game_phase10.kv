<CheckButton@Button>
    text: ''
    on_press: game_phase10.Phase10.check_button(self)
    ######### ^^ key to using func in cust items ^^ #######

<ScoreButton@Button>
    text: '0'
    on_release: game_phase10.Phase10.add_score(self)

<RulesPopup@Popup>
    auto_dismiss: False
    title: 'Phase 10 Rules'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: rules_label
            text: 'This is where the rules go'
        Button:
            text: 'Close'
            size_hint: 1, .2
            on_release: root.dismiss()

<PhasesPopup@Popup>
    auto_dismiss: False
    title: 'Phases'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'This is where the Phases go'
        Button:
            text: 'Close'
            size_hint: 1, .2
            on_release: root.dismiss()


<Phase10>
    name: 'phase10'
    BoxLayout:
        orientation: 'vertical'

        # Top Bar #
        GridLayout:
            cols: 3
            rows: 2
            size_hint: 1, .2
            Button:
                text: '<--'
                size_hint: .2, 1
                on_release: app.root.current = 'welcome_screen'
            Label:
                text: 'Phase 10'
            Label:
                size_hint: .2, 1

            Label:
            Label:
                text: 'Players'
            Label:

        LabelRow:


        # Players area #
        BoxLayout:
            id: players
            orientation: 'vertical'
            #size_hint: 1, .8

        GridLayout:
            cols: 5
            rows: 1
            size_hint: 1, .1

            Button:
                text: 'Add Player'
                on_release: root.add_player()
            Button:
                text: 'Remove Player'
                on_release: root.remove_player()
            Button:
                text: 'Ruels'
                on_release: Factory.RulesPopup().open()
            Button:
                text: 'Phases'
                on_release: Factory.PhasesPopup().open()
            Button:
                text: 'Reset'
                on_release: root.reset_game()